<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.example.demo.repository.MemberDao">
	
	<insert id="regiAf" parameterType="com.example.demo.Member.Member">
		insert into member (username, password)
		values (#{username}, #{password})	
	</insert>
	
	<select id="checkDuplicateUsername" parameterType="String" resultType="Integer">
		select count(*)
		from member
		where username = #{username}
	</select>
	
	<select id="loginAf" parameterType="com.example.demo.Member.Member" resultType="Integer">
		select count(*)
		from member
		where username = #{username} AND password = #{password}
	</select>
	
	<select id="getUser" parameterType="String" resultType="com.example.demo.Member.Member">
		select *
		from member
		where username=#{username}
	</select>
	
	
	
	</mapper>